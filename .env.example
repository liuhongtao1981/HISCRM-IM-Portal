# HisCRM-IM 环境配置示例
# 复制此文件为 .env 并根据环境修改值

# 部署环境
NODE_ENV=development

# Master 服务器配置
MASTER_HOST=0.0.0.0
MASTER_PORT=3000

# Admin Web 服务器配置
ADMIN_HOST=0.0.0.0
ADMIN_PORT=3001

# Worker 配置
WORKER_ID=worker-1
WORKER_MAX_ACCOUNTS=10
WORKER_MASTER_HOST=localhost
WORKER_MASTER_PORT=3000

# 数据和日志路径 (相对于项目根目录或绝对路径)
DATA_PATH=./packages/master/data
LOGS_PATH=./logs

# Worker 特定路径
WORKER_DATA_PATH=./packages/worker/data
WORKER_PLATFORMS_PATH=./packages/worker/src/platforms

# 日志级别
LOG_LEVEL=debug

# 配置文件路径 (可选，如果指定会覆盖默认配置)
CONFIG_FILE=./config.json

# 数据库配置
DATABASE_TYPE=sqlite
DATABASE_PATH=./packages/master/data/master.db

# 功能开关
ENABLE_BROWSER_DEBUG=false
ENABLE_PLATFORM_CACHE=true

# 代理配置 (可选)
HTTP_PROXY=
HTTPS_PROXY=
