# Debug 模式配置文件
# 使用方法: DEBUG=true npm run start:master
#          DEBUG=true npm run start:worker

# ==================== 全局 Debug 配置 ====================
# 启用 Debug 模式 (启用后会自动应用以下所有 Debug 设置)
DEBUG=true

# ==================== MCP 调试接口 ====================
# 启用 MCP (实时监控面板)
DEBUG_MCP=true

# MCP 服务端口 (默认 9222)
MCP_PORT=9222

# MCP 服务主机 (默认 localhost)
MCP_HOST=localhost

# ==================== Worker Debug 配置 ====================
# Browser 显示模式 (false = 显示浏览器窗口, true = headless)
DEBUG_HEADLESS=false

# 详细日志 (可选)
DEBUG_VERBOSE=false

# 保存日志到文件 (可选)
DEBUG_LOG_FILE=false

# ==================== Master Debug 配置 ====================
# 自动启动 Worker (当 Master 启动时自动启动一个 Worker)
DEBUG_AUTO_START=true

# Worker 启动命令 (可选, 如果需要自定义)
# WORKER_COMMAND=npm run start:worker

# ==================== 网络配置 ====================
# Master 主机
MASTER_HOST=localhost

# Master 端口
MASTER_PORT=3000

# Worker 端口
WORKER_PORT=4000

# ==================== 可选配置 ====================
# Node 环境
NODE_ENV=development

# 日志级别
LOG_LEVEL=debug

# 数据库路径 (可选)
# DATABASE_PATH=./data/master.db
