{
  "platform": "douyin",
  "displayName": "抖音",
  "version": "1.0.0",
  "urls": {
    "home": "https://www.douyin.com/",
    "login": "https://www.douyin.com/",
    "creatorCenter": "https://creator.douyin.com/",
    "commentManagement": "https://creator.douyin.com/creator-micro/interactive/comment",
    "messageManagement": "https://creator.douyin.com/creator-micro/data/following/chat"
  },
  "selectors": {
    "loginButton": "text=登录",
    "qrCodeImage": "img[alt*='二维码'], img[src*='qrcode'], canvas",
    "loginSuccess": ".user-info, .avatar",
    "comments": ".comment-item",
    "directMessages": ".message-item"
  },
  "timeouts": {
    "qrCodeLoad": 30000,
    "loginCheck": 300000,
    "pageLoad": 15000,
    "qrCodeLifetime": 150000
  },
  "crawlers": {
    "commentCrawler": {
      "enabled": false,
      "description": "评论爬虫 - 通过浏览器自动化抓取评论数据",
      "interval": {
        "min": 60,
        "max": 600,
        "unit": "seconds",
        "description": "随机间隔范围（秒）"
      }
    },
    "dmCrawler": {
      "enabled": true,
      "description": "私信爬虫 - 通过浏览器自动化抓取私信数据",
      "interval": {
        "min": 60,
        "max": 600,
        "unit": "seconds",
        "description": "随机间隔范围（秒）"
      }
    },
    "apiCrawler": {
      "enabled": true,
      "autoStart": true,
      "interval": 120,
      "description": "API爬虫 - 定时自动抓取作品、评论和二级评论，无需打开浏览器窗口",
      "works": {
        "pageSize": 50,
        "maxPages": 9999,
        "description": "作品抓取配置：9999表示不限制，抓取所有"
      },
      "comments": {
        "enabled": true,
        "pageSize": 20,
        "maxPages": 9999,
        "maxComments": 999999,
        "description": "评论抓取配置：9999表示不限制，抓取所有"
      },
      "replies": {
        "enabled": true,
        "pageSize": 20,
        "maxPages": 9999,
        "maxReplies": 999999,
        "description": "二级评论抓取配置：9999表示不限制，抓取所有"
      },
      "delays": {
        "betweenWorks": 500,
        "betweenCommentPages": 300,
        "betweenReplies": 200,
        "unit": "milliseconds",
        "description": "延迟配置（防止触发限流）：测试环境用较小值，生产环境建议增加"
      }
    }
  }
}
