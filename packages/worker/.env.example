# Worker进程配置

# Worker ID (自动生成或手动指定)
WORKER_ID=worker-001

# 主控服务地址
MASTER_HOST=localhost
MASTER_PORT=3000

# Worker端口
WORKER_PORT=4000

# 数据库路径
DB_PATH=./data/worker.db

# 日志级别
LOG_LEVEL=info

# 环境
NODE_ENV=development

# ========================================
# 浏览器配置
# ========================================
# 系统使用多Browser架构:
#   - 每个账户独立Browser进程
#   - 100%指纹隔离,无关联风险
#   - 指纹稳定持久化
#   - 内存: ~200MB/账户
#   - 建议最大账户数: ≤10个/Worker
#
# 详细文档: ../../.docs/architecture/多Browser架构详解.md

# 浏览器是否无头模式 (false=显示浏览器窗口,方便调试)
HEADLESS=true

# ========================================
# 任务配置
# ========================================

# 登录检测任务配置
LOGIN_CHECK_ENABLED=true                # 启用独立登录检测任务
LOGIN_CHECK_INTERVAL=30                 # 登录检测间隔（秒）- 每30秒检测一次登录状态

# 爬虫任务配置 (MonitorTask)
CRAWL_INTERVAL_MIN=0.5                  # 爬虫最小间隔（分钟）- 默认 0.5 分钟 (30秒)
CRAWL_INTERVAL_MAX=0.5                  # 爬虫最大间隔（分钟）- 默认 0.5 分钟 (30秒)

# 账号状态上报配置
ACCOUNT_STATUS_REPORT_INTERVAL=60000    # 账号状态上报间隔(ms) - Worker 每1分钟上报一次账号状态
ACCOUNT_STATUS_BATCH_SIZE=50            # 批量上报最大账号数 - 单次最多上报50个账号

# 新数据推送配置 (IsNewPushTask)
IS_NEW_PUSH_INTERVAL=60000              # 推送检查周期（毫秒）- 建议 60000 (60秒)
IS_NEW_PUSH_MAX_TIMES=3                 # 单条数据最多推送次数 - 建议 3 次
IS_NEW_FILTER_ENABLED=true              # 启用新数据过滤推送
