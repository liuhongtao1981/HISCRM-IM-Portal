# HisCRM-IM 环境变量配置模板
# 复制此文件为 .env (在项目根目录或应用运行目录)

# ========== 基本配置 ==========
NODE_ENV=development
APP_ROOT=./

# ========== Master 服务器 ==========
MASTER_HOST=0.0.0.0
MASTER_PORT=3000

# ========== Worker 服务器 ==========
WORKER_ID=worker-1
WORKER_HOST=0.0.0.0
WORKER_PORT=4001
WORKER_MAX_ACCOUNTS=10

# ========== Worker 连接 Master ==========
WORKER_MASTER_HOST=localhost
WORKER_MASTER_PORT=3000

# ========== 数据和日志路径 ==========
MASTER_DATA_PATH=./packages/master/data
WORKER_DATA_PATH=./packages/worker/data
MASTER_LOGS_PATH=./packages/master/logs
WORKER_LOGS_PATH=./packages/worker/logs

# ========== 平台配置 ==========
WORKER_PLATFORMS_PATH=./packages/worker/src/platforms

# ========== 数据库 ==========
DATABASE_TYPE=sqlite
DATABASE_PATH=./packages/master/data/master.db

# ========== 日志配置 ==========
LOG_LEVEL=debug

# ========== 配置文件 ==========
CONFIG_FILE=./config.json

# ========== 代理配置 (可选) ==========
HTTP_PROXY=
HTTPS_PROXY=

# ========== 功能开关 ==========
ENABLE_BROWSER_DEBUG=false
ENABLE_PLATFORM_CACHE=true
